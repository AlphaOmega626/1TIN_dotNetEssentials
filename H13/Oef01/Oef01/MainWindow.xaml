        <RadioButton Content="Meteen verwijderen" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" Width="249" GroupName="rbGroup" Name="directDeleteRadioButton" Checked="CheckedHandler"/>
        <RadioButton Content="Via Button verwijderen" HorizontalAlignment="Left" Margin="264,17,0,0" VerticalAlignment="Top" Width="243" GroupName="rbGroup" Name="buttonDeleteRadioButton" Checked="CheckedHandler"/>

    </Grid>
</Window>
