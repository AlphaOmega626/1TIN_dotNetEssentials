<Window x:Class="H2O1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="lblA"  Content="A" HorizontalAlignment="Left" Margin="50,100,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblB" Content="B" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblC" Content="C" HorizontalAlignment="Left" Margin="150,100,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnJa" Content="Ja" HorizontalAlignment="Left" Margin="50,150,0,0" VerticalAlignment="Top" Width="50" Click="btnJa_Click"/>
        <Button x:Name="btnNee" Content="Nee" HorizontalAlignment="Left" Margin="100,150,0,0" VerticalAlignment="Top" Width="50" Click="btnNee_Click"/>
        <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Margin="150,150,0,0" VerticalAlignment="Top" Width="50" Click="btnReset_Click"/>

    </Grid>
</Window>
