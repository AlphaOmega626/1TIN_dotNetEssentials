<Window x:Class="Oef07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="80" Width="450">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="MenuHandler" Name="openMenuButton"/>
                <Separator/>
                <MenuItem Header="_Close" Click="MenuHandler" Name="closeMenuButton"/>
            </MenuItem>            
        </Menu>
        <Grid>
            <Label Content="Aantal lijnen in de hele map" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="200"/>
            <Label Content="" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="200" Margin="205,0,0,0" Name="countLabel"/>
        </Grid>
    </DockPanel>
</Window>
